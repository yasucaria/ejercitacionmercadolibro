<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="essence/css/stylecargadeproducto.css"
    />
    <title>CARGA DE PRODUCTOS</title>

    <link
      href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css"
    />
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  </head>

    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %> 
    <!-- ##### Header Area End ##### -->

  <body>
    <form class="form-horizontal">
      <fieldset>
        <!-- Form Name -->
        <legend>CARGA DE PRODUCTOS</legend>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="product_id"
            >PRODUCTO ID</label
          >
          <div class="col-md-4">
            <input
              id="product_id"
              name="product_id"
              placeholder="PRODUCT ID"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="product_name"
            >NOMBRE DE PRODUCTO</label
          >
          <div class="col-md-4">
            <input
              id="product_name"
              name="product_name"
              placeholder="NOMBRE DE PRODUCTO"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="product_categorie"
            >CATEGORIA</label
          >
          <div class="col-md-4">
            <select
              id="product_categorie"
              name="CATEGORIA DE PRODUCTO"
              class="form-control"
            >
              <option selected value="0"> Elige una opción </option>
              <optgroup label="BIOLOGIA">
                <option value="1">Bioenergética</option>
                <option value="2">Biologíaa Aplicada</option>
                <option value="3">Biología Experimental</option>
              </optgroup>
              <optgroup label="PEDAGOGIA">
                <option value="10">Educación</option>
                <option value="11">Enseñanza</option>
                <option value="12">Psicologíaa</option>
              </optgroup>
            </select>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="available_quantity"
            >CANTIDADES DISPONIBLES</label
          >
          <div class="col-md-4">
            <input
              id="available_quantity"
              name="available_quantity"
              placeholder="CANTIDADES DISPONIBLES"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="product_weight"
            >PESO DE PRODUCTO</label
          >
          <div class="col-md-4">
            <input
              id="product_weight"
              name="product_weight"
              placeholder="PESO EN KG"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="product_description"
            >DESCRIPCIÓN DE PRODUCTO</label
          >
          <div class="col-md-4">
            <textarea
              class="form-control"
              id="product_description"
              name="BREVE DESCRIPCIÓN"
              rows="10"
              cols="40"
            >
Escribe aquí tu la descripción</textarea
            >
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="percentage_discount"
            >DESCUENTO</label
          >
          <div class="col-md-4">
            <input
              id="percentage_discount"
              name="percentage_discount"
              placeholder="% DE DESCUENTO"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="stock_alert"
            >STOCK ALERT</label
          >
          <div class="col-md-4">
            <input
              id="stock_alert"
              name="stock_alert"
              placeholder="STOCK ALERT"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="online_date"
            >FECHA DE LANZAMIENTO</label
          >
          <div class="col-md-4">
            <input
              id="online_date"
              name="online_date"
              placeholder="FECHA DE LANZAMIENTO"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="author">AUTOR</label>
          <div class="col-md-4">
            <input
              id="author"
              name="author"
              placeholder="AUTOR"
              class="form-control input-md"
              required=""
              type="text"
            />
          </div>
        </div>

        <!-- File Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="filebutton"
            >IMAGENES DE PRODUCTO</label
          >
          <div class="col-md-4">
            <input
              id="filebutton"
              name="filebutton"
              class="input-file"
              type="file"
            />
          </div>
        </div>
        <!-- File Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="filebutton"
            >DETALLE DE PRODOUCTO</label
          >
          <div class="col-md-4">
            <input
              id="filebutton"
              name="filebutton"
              class="input-file"
              type="file"
            />
          </div>
        </div>

        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="singlebutton"
            >CARGAR PRODUCTO</label
          >
          <div class="col-md-4">
            <button
              id="singlebutton"
              name="singlebutton"
              class="btn btn-primary"
            >
              CARGAR
            </button>
          </div>
        </div>
      </fieldset>
    </form>

    <!-- ##### Footer Area Start ##### -->
    <%- include("./partials/footer") %>
    <!-- ##### Footer Area End ##### -->
  </body>
</html>
